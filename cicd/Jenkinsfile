pipeline {
    agent any

    environment {
        // Terraform wants these env-vars
        TF_IN_AUTOMATION = 'true'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Lint') {
            steps {
                sh 'make lint'
            }
        }

        stage('Plan') {
            steps {
                withCredentials([string(credentialsId: 'proxmox-token', variable: 'PM_SECRET')]) {
                    withEnv([
                        'TF_VAR_pm_api_token_secret=' + env.PM_SECRET,
                        'TF_VAR_pm_api_token_id=terraform@pve!terraform-token'
                    ]) {
                        sh 'make plan'
                    }
                }
            }
        }

        stage('Apply') {
            when { branch 'main' }   // only auto-apply on main
            steps {
                withCredentials([string(credentialsId: 'proxmox-token', variable: 'PM_SECRET')]) {
                    withEnv([
                        'TF_VAR_pm_api_token_secret=' + env.PM_SECRET,
                        'TF_VAR_pm_api_token_id=terraform@pve!terraform-token'
                    ]) {
                        sh 'make apply'
                    }
                }
            }
        }
    }
}